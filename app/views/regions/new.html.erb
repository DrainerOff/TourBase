<%= form_with model: @new_region, local: false do |f| %>
  <p>
  <div>
    <%= f.label :"Название региона" %>
    <%= f.text_field :region_name, placeholder: "Введите название" %>
  </div>
  </p>
  <p>
  <div class="col-md-5">
    <div class="px-3">
      <%= f.label :"Страна" %>
    </div>
    <%= f.collection_select :country_id, Country.all, :id, :country_name, {}, {class: "form-select"} %>
  </div>
  </p>

  <div class="px-2 my-2">
    <%= f.submit "Добавить" %>
  </div>

<% end %>