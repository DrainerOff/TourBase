<div class="px-2 my-2">
  <a type="button" class="btn btn-primary btn-lg px-4 gap-3" href="/tourbase/new">Добавить</a>
</div>

<% @tours.each do |tour| %>
  <div class="row align-items-md-stretch">
    <div class="col-md-6">
      <div class="h-100 p-5 bg-light border rounded-3">
        <h2><%= tour.tourbase_name %></h2>
        <div class="fs-5 text-muted">
          <h2><%= tour.city.region.region_name %> , <%= tour.city.city_name %></h2>
        </div>
        <button class="btn btn-outline-secondary" type="button">Изменить</button>
      </div>
    </div>
  </div>
<% end %>


