<div class="px-2 my-2">
  <a type="button" class="btn btn-primary btn-lg px-4 gap-3" href=<%= new_city_path %>>Добавить</a>
</div>

<% @cities.each do |city| %>
  <div class="row align-items-md-stretch">
    <div class="col-md-6">
      <div class="h-100 p-5 bg-light border rounded-3">
        <h2><%= city.city_name %></h2>
        <div class="fs-5 text-muted">
          <h2><%= city.region.region_name %></h2>
        </div>
        <a type="button" class="btn btn-outline-secondary" href=<%= edit_city_path(city) %>>Изменить</a>
        <%= link_to 'Удалить', city_path(city), method: :delete, confirm:'Вы уверены? Все зависимые сущности, также будут удалены!', :class => "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
  </div>
<% end %>
